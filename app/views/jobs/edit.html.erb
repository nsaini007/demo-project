<div class ="col-lg-12">
    <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center">Edit Job</h2>
        </div>
    </div>
</div>
<%= form_with model: @job, url: recruiter_job_path(recruiter_id: current_user.id) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <%= f.submit %>
<% end %>